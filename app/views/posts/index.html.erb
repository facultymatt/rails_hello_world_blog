<h1>Listing posts</h1>
 
<%= link_to 'Add Post', new_post_path, :id => 'new_post' %>

<table>
  <tr>
    <th>id</th>
    <th>Title</th>
    <th>Text</th>
    <th>Comments</th>
    <th></th>
    <th></th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.id %></td>
      <td><%= post.title %></td>
      <td><%= post.text %></td>
      <td><%= post.comments.count %></td>
      <td><%= link_to 'Show', post %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Destroy', post_path(post),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr> 
  <% end %>
